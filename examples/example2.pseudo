declare x;
declare y;
declare z;
declare counter;
declare sum;

x <- 3;
y <- 7;
z <- 1;
counter <- 0;
sum <- 0;

while (counter < 5) loop
    sum <- sum + x;
    counter <- counter + 1;

    if (counter = 3) then
        x <- y;
    end if;
end loop;

put("Final sum: "); put(sum);
put("Final value of x: "); put(x);
